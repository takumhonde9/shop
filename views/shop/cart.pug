extends ../layouts/main-layout.pug

block content
  main
    h1 Cart
    if cartData.length > 0
      ul 
        each cartDatum in cartData 
          li
            p 
              span #{cartDatum.product.title} 
              span (#{cartDatum.quantity})
            form(action="/cart-delete-item" method="POST")
              input(type="hidden", name="productID", value=cartDatum.product.id)
              button.btn(type="submit") delete

    else 
      p Cart is empty